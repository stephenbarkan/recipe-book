<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">


  <title>{% if title %} {{ title }} | {% endif %} {{ site.title }}</title>
  <meta property="og:title" content="{% if title %} {{ title }} | {% endif %} {{ site.siteName }}"/>
  <meta name="twitter:title" content="{% if title %} {{ title }} | {% endif %} {{ site.siteName }}">

  <meta name="description" content="{% if socialSnippet %}{{ socialSnippet}}{% else %}{{site.socialSnippet}}{% endif %}">
  <meta property="og:description" content="{% if socialSnippet %}{{ socialSnippet}}{% else %}{{site.socialSnippet}}{% endif %}"/>

  <link rel="canonical" href="{{ site.permalink }}{{ page.url }}">
  <meta property="og:url" content="{{ site.permalink }}{{ page.url }}" />

  <meta name="twitter:card" content="summary_large_image">
  <meta property="og:image" content="{% if socialGraphic %}{{site.permalink}}{{socialGraphic}}{% else %}{{site.permalink}}{{site.socialGraphic}}{% endif %}"/>
  <meta property="twitter:image" content="{% if socialGraphic %} {{socialGraphic}} {% else %} {{site.permalink}}{{site.socialGraphic}} {% endif %}"/>
  <meta property="og:image:width" content="2400" />
  <meta property="og:image:height" content="1350" />
  <meta property="og:image:alt" content="{{site.socialSnippet}}" />


  {% if helpers.environment == "development" %}
  <link rel="stylesheet" href="/css/main.css">
  {% else %}
  {# else, use the minified css file for production #}
  <link rel="stylesheet" href="/css/main.css">
  {% endif %}

  {% if helpers.environment == "development" %}
  <script src="/js/main.js" defer></script>
  {% else %}
  <script src="/js/main.min.js" defer></script>
  {% endif %}

<script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>


  {# lastly include favicon, fonts, etc #}
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  {# <link rel="manifest" href="/site.webmanifest"> #}
  <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#f86849">
  <link rel="shortcut icon" href="/favicon.ico">
  <meta name="msapplication-TileColor" content="#da532c">
  <meta name="msapplication-config" content="/browserconfig.xml">
  <meta name="theme-color" content="#141414">

<script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.8.1/dist/alpine.min.js" defer></script>



</head>
